{
  "settings":{
    "index":{
      "analysis":{
        "analyzer":{
          "ngram_analyzer":{
            "type":"custom",
            "tokenizer":"letter",
            "filter":[
              "lowercase",
              "stop",
              "ngram"
            ]
          }
        },
        "filter":{
          "ngram":{
            "type":"nGram",
            "min_gram":1,
            "max_gram":20
          }
        }
      }
    }
  },
  "mappings":{
    "json-ld-lobid":{
      "properties":{
        "http://purl.org/dc/elements/1.1/creator#preferredNameForThePerson":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        }
      }
    },
    "json-ld-gnd":{
      "date_detection":false,
      "properties":{
        "http://d-nb.info/standards/elementset/gnd#preferredNameForThePerson":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        }
      }
    },
    "json-ld-lobid-orgs":{
      "date_detection":false,
      "properties":{
        "http://www.w3.org/2004/02/skos/core#prefLabel":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        }
      }
    }
  }
}