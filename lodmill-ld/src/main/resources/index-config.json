							"lowercase",
							"stop",
							"ngram"
						]
					},
					"id_analyzer":{
						"type":"custom",
						"tokenizer":"keyword",
						"filter":[
							"lowercase"
						]
					},
					"default":{
						"type":"custom",
						"tokenizer":"whitespace",
						"filter":[
							"icu_normalizer",
							"icu_folding",
							"german_umlaut",
							"unique"
						]
					}
				},
				"filter":{
					"ngram":{
						"type":"edgeNGram",
						"min_gram":1,
						"max_gram":40
					},
					"german_umlaut":{
