{
  "settings":{
    "index":{
      "analysis":{
        "analyzer":{
          "ngram_analyzer":{
            "type":"custom",
            "tokenizer":"letter",
            "filter":[
              "lowercase",
              "stop",
              "ngram"
            ]
          },
          "id_analyzer":{
            "type":"custom",
            "tokenizer":"keyword",
            "filter":[
              "lowercase"
            ]
          }
        },
        "filter":{
          "ngram":{
            "type":"nGram",
            "min_gram":1,
            "max_gram":20
          }
        }
      }
    }
  },
  "mappings":{
    "json-ld-lobid":{
      "properties":{
        "http://purl.org/dc/elements/1.1/creator#preferredNameForThePerson":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        },
        "http://purl.org/ontology/bibo/isbn13":{
          "type":"string",
          "index":"not_analyzed"
        },
        "http://purl.org/ontology/bibo/isbn10":{
          "type":"string",
          "index":"not_analyzed"
        },
        "@id":{
          "type":"string",
          "index_analyzer":"id_analyzer",
          "search_analyzer":"id_analyzer"
        },
        "http://purl.org/dc/terms/subject":{
          "type":"nested",
          "index_analyzer":"id_analyzer",
          "search_analyzer":"id_analyzer"
        }
      }
    },
    "json-ld-gnd":{
      "date_detection":false,
      "properties":{
        "http://d-nb.info/standards/elementset/gnd#preferredNameForThePerson":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        },
        "http://d-nb.info/standards/elementset/gnd#variantNameForThePerson":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        }
      }
    },
    "json-ld-lobid-orgs":{
      "date_detection":false,
      "properties":{
        "http://www.w3.org/2004/02/skos/core#prefLabel":{
          "type":"string",
          "index_analyzer":"ngram_analyzer",
          "search_analyzer":"standard"
        }
      }
    }
  }
}